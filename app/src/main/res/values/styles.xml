<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->
    <style name="myCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
        <item name="behavior_draggable">true</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="button_Setup" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">130dp</item>
    </style>

    <style name="TableRow" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">24sp</item>

    </style>

    <style name="TableRowInfoText" >
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="InfoButton">
        <item name="android:background">@drawable/ic_outline_info_24</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DropDownButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:background">@drawable/ic_twotone_add_box_24</item>
    </style>

    <style name="SpielRecycler">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>

    </style>

    <style name="suffix">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="PunkteContainer">
        <item name="android:padding">5dp</item>
    </style>

    <style name="StatistikCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="StatistikGruppeTextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="CardContainer" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:contextClickable">true</item>
        <item name="elevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#35000000</item>
    </style>

    <style name="Table">
        <item name="background">@color/material_on_primary_disabled</item>
    </style>
</resources>
